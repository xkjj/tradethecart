<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>tradethecart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="./styles.css">
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="#">tradethecart</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/catalogue">Catalogue</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/collections">Collections</a>
          </li>
          <% if (typeof userdata==='undefined' ) { %>
            <li class="nav-item">

            </li>
            <% }else{ %>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard">Dashboard</a>
              </li>
              <% } %>
        </ul>
        <% if (typeof userdata==='undefined' ) { %>
          <a class="btn btn-outline-light" href="/">Login</a>
          <% }else{ %>
            <a class="btn btn-outline-light" href="/logout">Logout</a>
            <% } %>
      </div>
    </div>
  </nav>

  <div class="container mt-2 py-4 mb-4 bg-dark rounded-3 text-white">
    <div class="p-4 mb-4 lc-block">
      <div class="lc-block">
        <div editable="rich">
          <% if (typeof userdata==='undefined' ) { %>
            <h2 class="fw-bolder display-3">Hello, Guest!
            </h2>
            <% }else{ %>
              <h2 class="fw-bolder display-3">Hello, <%= userdata.username %>!
              </h2>
              <% } %>
        </div>
      </div>
      <div class="lc-block col-md-8">
        <div editable="rich">
          <p class="lead">Welcome to tradethecart! For all of your Pokemon trading card needs.
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="container my-4 text-centre">



    <div class="row row-cols-4 justify-content-center mt-5">
      <h3>Our newest cards:</h3>
    </div>
    <div class="row row-cols-4 justify-content-center">
      <div id="carouselExampleAutoplaying" class="carousel slide just" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% allcards.forEach((card, index)=> { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>" data-bs-interval="3000">
              <img src="<%= card.pokemon_img %>" class="d-block w-100" alt="...">
            </div>
            <% }); %>
        </div>
      </div>
    </div>



  </div>

</body>

</html>