<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Catalogue</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="./styles.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">tradethecart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/tradethecart">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/catalogue">Catalogue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard">Dashboard</a>
                    </li>
                </ul>
                <div>
                    <a class="btn" href="#">Hello, <%=userdata.username%></a>
                </div>
                <a class="btn btn-outline-light" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-2 py-4 mb-4 bg-dark rounded-3 text-white">
        <div class="p-4 mb-4 lc-block">
            <div class="lc-block">
                <div editable="rich">
                    <h2 class="fw-bolder display-3">Your Collection</h2>
                </div>
            </div>
            <div class="lc-block col-md-8">
                <div editable="rich">
                    <p class="lead">View every card in your own collection, or remove any unwanted cards.
                    </p>
                </div>
            </div>
            <form class="d-flex" role="search" action="/yourcards" method="GET">
                <input class="form-control me-2" type="search" name="search" placeholder="Search for a specific card"
                    aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
            <a class="btn btn-light mt-3" href="/dashboard">Back</a>
        </div>
    </div>

    <div class="container my-4 text-centre">
        <h1 class="mb-4">
            <% if (searchQuery) { %> Search results for '<%= searchQuery %>'<% } %>
        </h1>
        <div class="row row-cols-4">
            <% carddata.forEach((card)=> { %>
                <form method="POST" action="/yourcards">
                    <div class="col">
                        <div class="card mb-3" style="width: 18rem;">
                            <img src="<%=card.pokemon_img %>" class="card-img-top" alt=""
                                style="width:286px; height:393px">
                            <div class="card-body">
                                <input type="hidden" class="form-control" name="id_field" value="<%=card.id%>">
                                <h5 class="card-title">
                                    <%= card.pokemon_name %>
                                </h5>
                                <p class="card-text"></p>
                                <button class="btn btn-dark" type="submit">Delete from collection</button>
                            </div>
                        </div>
                    </div>
                </form>
                <% }); %>
        </div>
    </div>



</body>

</html>